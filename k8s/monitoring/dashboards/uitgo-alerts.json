{
  "dashboard": {
    "id": null,
    "uid": "uitgo-alerts",
    "title": "UITGo - Alerts Dashboard",
    "tags": ["uitgo", "alerts"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": " Service Health Alert",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "up{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "values": false
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": " DOWN", "color": "red" }, "1": { "text": " UP", "color": "green" } }, "type": "value" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "alert": {
          "name": "Service Down Alert",
          "conditions": [
            {
              "evaluator": { "params": [1], "type": "lt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "last" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "UITGo service is DOWN!",
          "noDataState": "alerting",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": " Memory Usage Alert",
        "type": "gauge",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
        "targets": [
          {
            "expr": "go_memstats_heap_alloc_bytes{job=~\"uitgo.*\"} / 1024 / 1024",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "MB",
            "min": 0,
            "max": 512,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 128 },
                { "color": "orange", "value": 256 },
                { "color": "red", "value": 384 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": " Goroutines Alert",
        "type": "gauge",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
        "targets": [
          {
            "expr": "go_goroutines{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1000,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 100 },
                { "color": "orange", "value": 500 },
                { "color": "red", "value": 800 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": " All Services Overview",
        "type": "table",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
        "targets": [
          {
            "expr": "up{job=~\"uitgo.*\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true, "__name__": true },
              "renameByName": {
                "job": "Service",
                "instance": "Instance",
                "Value": "Status"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": " DOWN" }, "1": { "text": " UP" } }, "type": "value" }
            ]
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Status" },
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": { "type": "color-background" }
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "color": "red", "value": null },
                      { "color": "green", "value": 1 }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": " Request Rate (if available)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
        "targets": [
          {
            "expr": "rate(promhttp_metric_handler_requests_total{job=~\"uitgo.*\"}[5m])",
            "legendFormat": "{{job}} - {{code}}"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 6,
        "title": " Uptime",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "values": false
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "yellow", "value": null },
                { "color": "green", "value": 3600 }
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}
