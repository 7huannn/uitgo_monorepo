{
  "dashboard": {
    "id": null,
    "uid": "uitgo-services",
    "title": "UITGo - Services Monitoring",
    "tags": ["uitgo", "kubernetes", "go"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "ðŸŸ¢ Services Status",
        "type": "stat",
        "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "up{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } }, "type": "value" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Goroutines per Service",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "go_goroutines{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Memory Usage (Heap)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          {
            "expr": "go_memstats_heap_alloc_bytes{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 4,
        "title": "GC Duration",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "rate(go_gc_duration_seconds_sum{job=~\"uitgo.*\"}[5m])",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Memory Allocations Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "rate(go_memstats_alloc_bytes_total{job=~\"uitgo.*\"}[5m])",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Heap Objects",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "go_memstats_heap_objects{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50000 },
                { "color": "red", "value": 100000 }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Go Version",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 20 },
        "targets": [
          {
            "expr": "go_info{job=~\"uitgo.*\"}",
            "legendFormat": "{{version}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "blue", "value": null }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Process Open FDs",
        "type": "stat",
        "gridPos": { "h": 4, "w": 8, "x": 16, "y": 20 },
        "targets": [
          {
            "expr": "process_open_fds{job=~\"uitgo.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 100 },
                { "color": "red", "value": 500 }
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}
