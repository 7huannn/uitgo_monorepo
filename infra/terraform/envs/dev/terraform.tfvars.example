# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to Git!

# Required
aws_region        = "ap-southeast-1"
db_password       = "YOUR_STRONG_PASSWORD_HERE"
trip_service_ami  = "ami-xxxxxxxxx"                # AMI with docker + compose plugin
container_registry = "ghcr.io/YOUR_USERNAME"       # or your ECR repo
backend_image_tag  = "latest"                      # tag pushed for user/trip/driver

# Secrets - CHANGE THESE!
jwt_secret                   = "generate-a-strong-jwt-secret-here"
refresh_token_encryption_key = "must-be-exactly-32-bytes-long!!"
internal_api_key             = "generate-a-strong-api-key-here"

# CORS / HTTPS
cors_allowed_origins = "*"
alb_certificate_arn  = ""                          # set ACM ARN to enable HTTPS
